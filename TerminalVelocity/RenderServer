namespace TerminalVelocity;
public class RenderServer
{
    private RenderServer instance;
    private Dictionary<Vec2i,SceneObject> current_screen;
    public static RenderServer Instance
    {
        get {
            if (instance == null)
            {
                instance = new RenderServer();
            }
            return instance;
        }
    }
    private RenderServer()
    {
        Game.CurrentScene.add_child(new SceneObject(Vec2i.DOWN,"RenderServer"));
    }

    public static void RenderToScreen()
    {
        throw new NotImplementedException();
    }

}